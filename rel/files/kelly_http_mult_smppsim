#!/bin/bash

#
# Gateways
#
curl -s -D - -X 'POST' 127.0.0.1:8080/gateways -d 'id=804e3d4a-dc38-11e3-90ee-00269e42f7a5&name=SMPPSim2&rps=10000'; echo; echo

curl -s -D - -X 'POST' 127.0.0.1:8080/gateways -d 'id=96a46498-dc38-11e3-8541-00269e42f7a5&name=SMPPSim3&rps=10000'; echo; echo

#
# Connections (SMPPSim2)
#
