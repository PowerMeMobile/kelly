{sys, [
    {lib_dirs, ["../deps", "../subapps"]},
    {erts, [{mod_cond, derived}, {app_file, strip}]},
    {rel, "kelly", git, [
        kernel,
        stdlib,

        k_common,
        k_storage,
        k_statistic,
        k_mailbox,
        k_handlers,
        k_control,
        k_http_api
    ]},
    {rel, "start_clean", "", [
        kernel,
        stdlib
    ]},
    {boot_rel, "kelly"},
    {profile, embedded},
    {excl_archive_filters, [".*"]}, %% Do not archive built libs
    {excl_sys_filters, [
        "^bin/.*", "^erts.*/doc", "^erts.*/src",
        "^erts.*/info", "^erts.*/man",
        "^erts.*/lib", "^erts.*/include",
        "^erts.*/bin/(dialyzer|typer)"
    ]},
    {excl_app_filters, ["\.gitignore"]},
    {app, hipe, [{incl_cond, exclude}]},
    {app, runtime_tools, [{incl_cond, include}]},
    {app, eper, [{incl_cond, include}]},
    {app, entop, [{incl_cond, include}]},
    {app, recon, [{incl_cond, include}]},
    {app, sasl, [{incl_cond, include}]},
    {app, meck, [{incl_cond, include}]}
]}.

{target_dir, "kelly"}.

{overlay, [
    {mkdir, "data"},
    {mkdir, "log"},
    {mkdir, "etc"},

    {copy, "files/erl", "\{\{erts_vsn\}\}/bin/erl"},
    {copy, "files/nodetool", "\{\{erts_vsn\}\}/bin/nodetool"},
    {copy, "files/kelly", "bin/kelly"},
    {copy, "files/sys.config", "releases/\{\{rel_vsn\}\}/sys.config"},
    {copy, "files/vm.args", "etc/vm.args"},

    {mkdir, "snmp/conf"},
    {mkdir, "snmp/db"},
    {copy, "files/snmp/conf/*", "snmp/conf/"},
    {mkdir, "mibs"},
    {copy, "files/mibs/*.bin", "mibs/"},

    {copy, "kelly/releases/\{\{rel_vsn\}\}/kelly.boot", "releases/\{\{rel_vsn\}\}/start.boot"}
]}.
